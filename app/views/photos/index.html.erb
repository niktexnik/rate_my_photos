<% name = current_user.present? ? current_user.email : 'Anonimus'%>
<%if current_user.nil?%>
<h4>Welcome, <%=name %>! You can register and add photos. And also comment on the photos and like nice photos</h4>
<%else%>
<h3>Welcome, <%=name %> </h3>
<%end%>

<h1>All photos: </h1><br>
  <%= paginate @photos %>
<% @photos.each do |photo| %>
  <div class="card-group">
      <div class="card mb-3">
        <div class="row g-0">
          <div class="md-4">
            <%= image_tag photo.image.url(:large), class: 'rounded mx-auto d-block'%>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= link_to photo.name, preview_photo_url(photo) %></h5>
              <p class="card-text"><%=photo.description%></p>
              <p class="card-text"><small class="text-muted">Last updated: <%=photo.created_at%></small></p>
              <p class="card-text"><small class="text-muted">Comments: <%=photo.comments_count%>  /  Likes: <%=photo.likes_count%></small></p>
            </div>
          </div>
        </div>
      </div>
  </div>
<%end%>
<%= paginate @photos %>