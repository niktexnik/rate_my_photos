<div class='mb-2 col-md-4'> <%= render 'shared/search'%> </div>
<p>Sort by: 
<%= link_to "Date(up)", photos_url(order: :created_at,  direction: 'desc') %>,
<%= link_to "Date(down)", photos_url(order: :created_at, direction: 'asc') %>,
<%= link_to "Likes(up)", photos_url(order: :likes_count, direction: 'desc') %>,
<%= link_to "Likes(down)", photos_url(order: :likes_count, direction: 'asc') %>,
<%= link_to "Comments(up)", photos_url(order: :comments_count, direction: 'desc') %>,
<%= link_to "Comments(down)", photos_url(order: :comments_count, direction: 'asc') %>
</p>
  <%= paginate @photos %>
    <div class="card-group">
      <% @photos.each do |photo| %>
          <div class="card mb-3">
            <div class="row g-0">
              <div class="md-4">
                <%= image_tag photo.image.url(:thumb), class: 'img-thumbnail'%>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= link_to photo.name, preview_photo_url(photo) %></h5>
                  <p class="card-text"><%=photo.description%></p>
                  <p class="card-text"><small class="text-muted">Last updated: <%=photo.created_at%></small></p>
                  <p class="card-text"><small class="text-muted">Comments: <%=photo.comments_count%>  /  Likes: <%=photo.likes_count%></small></p>
                  <p class="card-text"><small class="text-muted">Author: <%=photo.user.name%></small></p>
                </div>
              </div>
            </div>
          </div>
      <%end%>
    </div>
  <%= paginate @photos %>