  <%if policy(@comment).create?%> 
    <%= form_for [commentable, Comment.new] do |form| %>
      <div class="field">
        <%= form.text_field :body, class: 'form-control', placeholder: 'input your comment'%>
      </div>
      <div class='btn'>
        <%=form.submit "Send comment", class:'btn btn-success'%>
      </div>
    <% end %>
  <%end%>