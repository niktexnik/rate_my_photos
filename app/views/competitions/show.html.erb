<h1><%= @competition.name %></h1>

<div class="card-group">
<% @photos.each do |photo| %>
<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag photo.image.url(:large), class: 'img-fluid rounded-start'%>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= link_to photo.name, preview_competition_photo_path(@competition, photo) %></h5>
        <p class="card-text"><%=photo.description%></p>
        <p class="card-text"><small class="text-muted">Upload <%=photo.created_at%></small></p>
        <p class="card-text"><small class="text-muted">Comments: <%=photo.comments.count%></small></p>
      </div>
    </div>
  </div>
</div>
<%end%>
</div>
	<div class="btn-group">
		<%= link_to "Back", root_path, class: 'btn btn-warning'%>
		<%= link_to "Add photo", new_competition_photo_path(@competition), class: 'btn btn-success'%>
	</div>