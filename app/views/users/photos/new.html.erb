<h1>Add new photo</h1>

<div class="row">
    <%= form_with scope: :photo, as: :photo, url: users_photos_path, html: { multipart: true } do |form| %>
      <%= render 'shared/error_messages' %>
      
      <%= form.label "image" %>
      <%= form.file_field :image, class: 'form-control'%>

      <%= form.label "name" %>
      <%= form.text_field :name, class: 'form-control'%>

      <%= form.label "description" %>
      <%= form.text_field :description, class: 'form-control'%>

      <div class='btn'>
        <%= form.submit "Save", class:'btn btn-success', id: 'savePhoto'%>
        <%= link_to 'Back', users_photos_url, class:'btn btn-warning', id: 'backToCabinet' %>
      </div>
    <% end %>
</div>