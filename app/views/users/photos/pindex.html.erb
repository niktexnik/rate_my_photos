  <div class='btn-group mb-3'>
    <%= link_to "Add photo", new_users_photo_path, class: 'btn btn-success'%>
    <%= link_to "Edit profile", edit_user_registration_path, class: 'btn btn-warning'%>
  </div>
  <%= paginate @photos %>
    <div class="card-group">
      <% @photos.each do |photo| %>
          <div class="card mb-3">
                <%= image_tag photo.image.url(:thumb), class: 'rounded mx-auto d-block mt-2'%>
              <div class="card-body mx-auto">
                <h5 class="card-title"><%= link_to photo.name, users_photo_url(photo) %></h5>
                <p class="card-text"><%=photo.description%></p>
                <p class="card-text"><small class="text-muted">Last updated: <%=photo.created_at%></small></p>
                <p class="card-text"><small class="text-muted">Comments: <%=photo.comments_count%>  /  Likes: <%=photo.likes_count%></small></p>
                <p class="card-text"><small class="text-muted">Author: <%=photo.user.name%></small></p>
                <p class="card-text"><small class="text-muted">Status: <%=photo.status%></small></p>
              </div>
              <div class="btn-group mt-2 mb-2">
                <%= link_to "Edit photo", edit_users_photo_path(photo), class: 'btn btn-success' %>
                <%= link_to "Delete photo", users_photo_path(photo), class: 'btn btn-danger',
                              method: :delete,
                              data: { confirm: "Are you shure?" } %>
              </div>
          </div>
      <%end%>
    </div>
  <%= paginate @photos %>